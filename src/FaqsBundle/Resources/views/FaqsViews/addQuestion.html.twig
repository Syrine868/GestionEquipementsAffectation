{% extends 'back.html.twig' %}
{% form_theme formFaqs 'bootstrap_4_layout.html.twig' %}

{% block content %}
    <main >
        <br><br><br><br><br><br><br>
  <center>
        <section class="best-pricing2" data-background="{{ asset('back/img/giphy.gif') }} " data-opacity="20px">
            {{ form_start(formFaqs) }}<br><br>
            <div>

                <div class="form-group">
                    <label class="col-md-3 control-label" style="color: #0000F0">Votre Question</label>
                    <div class="col-xs-7 col-md-4">
                        {{form_widget(formFaqs.questionarea ,{'attr':{'class':'form-control round-form'}})}}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label" style="color: #0000F0">Description</label>
                    <div class="col-xs-7 col-md-4">
                        {{form_widget(formFaqs.headline ,{'attr':{'class':'form-control round-form'}})}}
                    </div>
                </div>
                <br><br>
                <div class="col-sm-12" >

                    <a href="{{ path('list_questions_user', {'id' : app.user.id })}}">
                    <button class="button button-contactForm boxed-btn" data-toggle="modal" data-target="#exampleModal" id="_submit" name="_submit" type="submit" >

                  Ajouter
                    </button>
                    </a>

                </div>
            </div>
            {{ form_end(formFaqs) }}
        </div>
    </div>
        </section>
  </center>
</main>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><i class="fa fa-info"></i> Information</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <p class="text-success"><i class="fa fa-info-circle"></i> Votre message a été envoyée avec succées.</p>
                </div>
                <div class="modal-footer">






                </div>
            </div>
        </div>
    </div>


{% endblock %}